[
    // editor <-> terminal move
    //// ctrl + : 
    {
        "key": "ctrl+oem_1",
        "command": "workbench.action.terminal.focus",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+oem_1",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "terminalFocus"
    }
]